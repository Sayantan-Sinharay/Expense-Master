<%= form_with(model: @user, url: user_registration_path, class: "box is-primary h-full w-1/2 bg-white p-10 flex flex-col") do |form| %>
  <h1 class="text-primary text-2xl font-bold">Register</h1>
  <div class="my-auto flex flex-col gap-5">
    <div class="field">
      <%= form.label :name, class: "label" %>
      <div class="control">
        <%= form.text_field :name, class: "input" %>
      </div>
    </div>
    <div class="field">
      <%= form.label :password, class: "label" %>
      <div class="control">
        <%= form.password_field :password, class: "input" %>
      </div>
    </div>
    <div class="field">
      <%= form.label :password_confirmation, class: "label" %>
      <div class="control">
        <%= form.password_field :password_confirmation, class: "input" %>
      </div>
    </div>
    <div class="field is-grouped font-medium">
      <div class="control">
        <%= form.submit 'Login', class: "button is-link" %>
      </div>
      <div class="control">
        <%= link_to "Cancel", root_path, class: "button is-link is-light" %>
      </div>
    </div>
  </div>
<% end %>
