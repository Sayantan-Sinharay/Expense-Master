<section class="flex flex-col h-full overflow-hidden gap-5">
  <h2 class="font-bold text-4xl">Report</h2>
  <div class="tabs text-lg is-fullwidth">
    <ul class="font-medium border-primary border-b-2">
      <li class="is-active" data-target="yearly-tab">
        <a>Yearly Analysis</a>
      </li>
      <li data-target="category-tab">
        <a>Category Analysis</a>
      </li>
    </ul>
  </div>
  <div class="flex flex-col p-2 h-full overflow-y-auto">
    <div id="yearly-tab" class="tab-content is-active">
      <%= render "yearly_analysis" %>
    </div>
    <div id="category-tab" class="tab-content">
      <%= render "category_analysis" %>
    </div>
  </div>
</section>
