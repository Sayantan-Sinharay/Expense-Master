<%= form_with(model: @organization, url: register_path, class: "box is-primary h-fit w-1/2 my-auto bg-white p-10 flex flex-col", method: :post) do |form| %>
  <h1 class="text-primary text-2xl mb-5 font-bold">Register</h1>
  <div class="flex flex-col gap-5 my-auto">
    <div class="field">
      <%= form.label :name, "Organization Name", class: "label required" %>
      <div class="control">
        <%= form.text_field :name, class: "input" %>
        <%= render "shared/form_error_message", object: @organization, field: :name %>
      </div>
    </div>
    <div class="field">
      <%= form.label :subdomain, "subdomain", class: "label required" %>
      <div class="control">
        <%= form.text_field :subdomain, class: "input" %>
        <%= render "shared/form_error_message", object: @organization, field: :subdomain %>
      </div>
    </div>
    <div class="field">
      <%= form.label :email, "Organization Email" , class: "label required" %>
      <div class="control">
        <%= form.text_field :email, class: "input" %>
        <%= render "shared/form_error_message", object: @organization, field: :email %>
      </div>
    </div>
    <div class="field flex flex-col w-auto h-52">
      <%= form.label :address, class: "label" %>
      <div class="control flex-1">
        <%= form.text_area :address, class: "input h-full"%>
      </div>
    </div>
    <div class="field is-grouped font-medium">
      <div class="control">
        <%= form.submit 'Register', class: "button is-link" %>
      </div>
      <div class="control">
        <%= link_to "Cancel", user_registration_path(token: params[:token], purpose: 'invitation'), class: "button is-link is-light" %>
      </div>
    </div>
  </div>
</div>
<% end %>
