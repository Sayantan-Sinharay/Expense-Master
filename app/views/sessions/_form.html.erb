<%= form_with(model: User.new, url: login_path, class: "box is-primary h-full w-1/2 bg-white p-10 flex flex-col") do |form| %>
  <h1 class="text-primary text-2xl font-bold">Login</h1>
  <div class="my-auto flex flex-col gap-5">
    <div class="field">
      <%= form.label :email, class: "label" %>
      <div class="control">
        <%= form.text_field :email, class: "input" %>
      </div>
    </div>
    <div class="field">
      <%= form.label :password, class: "label" %>
      <div class="control">
        <%= form.password_field :password, class: "input" %>
      </div>
    </div>
    <div class="field is-grouped font-medium">
      <div class="control">
        <%= form.submit 'Login', class: "button is-link" %>
      </div>
      <div class="control">
        <button class="button is-link is-light">Cancel</button>
      </div>
    </div>
  </div>
<% end %>
