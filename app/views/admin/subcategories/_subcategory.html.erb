<div id="subcategory_<%= subcategory.id %>" class="flex flex-row items-center p-2">
  <div id="subcategory-content" class="flex w-full">
    <span class="font-medium text-lg">
      <%= subcategory.name %>
    </span>
    <div class="flex flex-row items-center gap-5 ml-auto">
      <%= link_to edit_admin_category_subcategory_path(subcategory.category, subcategory), remote: true do %>
        <span class="icon text-xl font-medium text-primary">
          <i class="fa-solid fa-pen"></i>
        </span>
      <% end %>
      <%= link_to admin_category_subcategory_path(subcategory.category, subcategory), method: :delete, data: {confirm: "Are you sure ?"}, remote: true do %>
        <span class="icon text-xl font-medium has-text-danger">
          <i class="fa-solid fa-trash"></i>
        </span>
      <% end %>
    </div>
  </div>
</div>
