$(document).ready(function () {
  const category = $("#category_<%= @category.id %>");
  const subcategory = $("#subcategory_<%= @subcategory.id %>");
  const subcategoryList = category.find("#subcategory_list");
  const form = $("#subcategory-form")
  form.replaceWith("<%= j render @subcategory  %>");

  if (subcategoryList.children().length) {
    category.find(".accordion-header").find(".accordion-toggle").removeClass("invisible");
  }
});