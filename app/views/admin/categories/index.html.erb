<section class="flex flex-col h-full overflow-hidden gap-5">
  <h2 class="font-bold text-4xl">Category Management</h2>
  <div id="category_form-container">
    <%= render "form" %>
  </div>
  <div class="flex flex-col p-2 h-full overflow-y-auto accordion" id="category_list">
    <%= render partial: @categories %>
    <% if @categories.length == 0 %>
      <%= render "shared/message", object: "Category" %>
    <% end %>
  </div>
</section>
