$(document).ready(function() {
  const categoryList = $("#category_list");
  categoryList.prepend("<%= j render @category %>");

  const categoryAccordionContent = $("#category_<%= @category.id %> .accordion-content");
  categoryAccordionContent.hide();

  $("#category_form-container").empty().append("<%= j render 'form' %>")
  const createCategoryForm = $("#create_category-form");
  createCategoryForm.find("#category-input").val(""); 

  if (categoryList.children().length && categoryList.find("#list-message").length) {
    categoryList.find("#list-message").remove();
  } 
});
