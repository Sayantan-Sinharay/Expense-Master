$(document).ready(function() {
  const usersList = $("#users_list");
  const inviteUserForm = $("#invite_user-form");
  const formToggleButton = $("#form_toggle-button");

  usersList.prepend("<%= j render @user %>");
  inviteUserForm.remove();
  formToggleButton.show();

  if (usersList.children().length) {
    usersList.find("#list-message").remove();
  }
});
