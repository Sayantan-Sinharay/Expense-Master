<div class="modal" id="rejectModal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Reject Expense</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <form class="reject-form">
        <div class="field">
          <label class="label" for="reasonInput">Reason:</label>
          <div class="control">
            <textarea class="textarea" id="reasonInput" name="reason" required></textarea>
          </div>
        </div>
        <div class="field">
          <div class="alert alert-danger reject-error is-hidden">
            Please provide a reason for rejection.
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button type="submit" class="button is-danger">Reject</button>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>
