<div id="expense-item" class="box flex flex-col gap-5">
  <div class="flex flex-col gap-1">
    <div class="title flex items-center justify-between">
      <span class="flex items-center gap-2">
        <span class="text-2xl">Category:</span>
        <span class="text-xl">
          <%= Category.find_by(id: expense.category_id).name %>
        </span>
      </span>
      <span class="icon-text has-text-danger">
        <span> - </span>
        <span class="icon">
          <i class="fa-solid fa-indian-rupee-sign"></i>
        </span>
        <span>
          <%= expense.amount %>
        </span>
      </span>
    </div>
    <div class="subtitle flex items-center has-text-grey gap-2">
      <span class="text-lg">Sub-Category:</span>
      <span class="text-base">
        <%= Subcategory.find_by(id: expense.subcategory_id).name %>
      </span>
    </div>
  </div>
  <div class="flex flex-col gap-3">
    <div>
      <span class="font-bold flex gap-2">
        <span>Date:</span>
        <%= expense.date %>
      </span>
    </div>
    <div class="flex font-bold flex-col gap-2">
      <span>Note:</span>
      <p class="font-light">
        <%= expense.notes %>
      </p>
    </div>
  </div>
  <div class="flex">
    <span class="font-bold has-text-<%= !expense.status_before_type_cast  ? "warning" : ( expense.status_before_type_cast == 1 ? "success" : "danger") %>">
      <%= expense.status.humanize %>
    </span>
    <span class="ml-auto has-text-grey font-light text-sm">
      <%= time_ago_in_words(expense.created_at) %>
    </span>
  </div>
</div>
