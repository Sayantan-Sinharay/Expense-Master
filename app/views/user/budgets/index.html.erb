<%= render "layouts/user" do %>
  <section class="flex flex-col gap-5 h-full overflow-hidden">
    <span class="flex items-center justify-between">
      <h2 class="font-bold text-4xl">Budget Planner</h2>
      <%= link_to "Create Budget", new_budget_path, class: "button is-primary font-bold border-2 is-outlined w-fit"%>
    </span>
    <%= render "filters" %>
    <div class="flex flex-col p-2 h-full overflow-y-auto" id="budget_list">
      <%= render @budgets, {selected_category_id: @selected_category_id, selected_month: @selected_month} %>
    </div>
  </section>
<% end %>
